<%- include("partials/header.ejs") %>
      

          <div class="row d-flex justify-content-between">
            <div>
                <form class="d-flex justify-content-start align-items-start mb-4" action="/submit" method="post">
                      <input name="input_text" type="text" class="form-control" placeholder="Enter your task here" >
                      <input type="submit" value="Add" class="btn btn-info ms-2">
                </form>
            </div>
            
          </div>

          <!-- Tabs navs -->
          <ul class="nav nav-tabs mb-4 pb-2" id="ex1" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="/" role="tab"
                aria-controls="ex1-tabs-1" aria-selected="true">Today tasks</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="ex1-tab-2" data-mdb-toggle="tab" href="/work" role="tab"
                aria-controls="ex1-tabs-2" aria-selected="false">Work tasks</a>
            </li>
          </ul>
          <!-- Tabs navs -->

          <!-- Tabs content -->
          <div class="tab-content" id="ex1-content">
            <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1">
              <% if (locals.dailyArray) { %>   
                  <div class="list-group mb-0">
                    <% dailyArray.forEach((dailyTask) =>{  %>
                      <div class="item">
                        <form action="/delete" method="post">
                            <input name="checkThis" class="form-check-input me-2" type="checkbox" onchange="this.form.submit()" value="<%= dailyTask.id %>" aria-label="..."/>   
                        </form>
                          <p id="title<%= dailyTask.id %>">
                            <%= dailyTask.task %>
                          </p>
                          <form class="edit" action="/edit" method="post">
                            <input type="hidden" name="updatedItemId" value="<%= dailyTask.id %>">
                            <input class="form-control" id="input<%=dailyTask.id%>" type="text" name="updatedItemTitle" value="<%= dailyTask.task %>" autocomplete="off"
                              autofocus="true" hidden="true" />
                            <button id="done<%=dailyTask.id%>" class="edit" type="submit" hidden><img class="icon"
                                src="/assets/icons/check-solid.svg" alt="tick image"></button>
                          </form>                          
                          <button id="edit<%=dailyTask.id%>" class="edit" onclick="handler('<%=dailyTask.id%>')"><img class="icon"
                              src="/assets/icons/pencil-solid.svg" alt="pencil image"></button>
                      </div>
                    <%   })    %>
                    </div>             
              <% } %>
            </div>
          </div>
          <!-- Tabs content -->

        </div>
      </div>

    </div>
  </div>
</div>
</section>

<script>
  function handler(id) {
    document.getElementById("title" + id).setAttribute("hidden", true)
    document.getElementById("edit" + id).setAttribute("hidden", true)
    document.getElementById("done" + id).removeAttribute("hidden")
    document.getElementById("input" + id).removeAttribute("hidden")
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</body>
</html>