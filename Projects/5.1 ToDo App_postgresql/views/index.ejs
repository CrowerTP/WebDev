<%- include("partials/header.ejs") %>
      

          <div class="row d-flex justify-content-between">
            <div>
                <form class="d-flex justify-content-start align-items-start mb-4" action="/submit" method="post">
                      <input name="input_text" type="text" class="form-control" placeholder="Enter your task here" >
                      <input type="submit" value="Add" class="btn btn-info ms-2">
                </form>
            </div>
            
          </div>

          <!-- Tabs navs -->
          <ul class="nav nav-tabs mb-4 pb-2" id="ex1" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="/" role="tab"
                aria-controls="ex1-tabs-1" aria-selected="true">Today tasks</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="ex1-tab-2" data-mdb-toggle="tab" href="/work" role="tab"
                aria-controls="ex1-tabs-2" aria-selected="false">Work tasks</a>
            </li>
          </ul>
          <!-- Tabs navs -->

          <!-- Tabs content -->
          <div class="tab-content" id="ex1-content">
            <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1">
              <% if (locals.dailyArray) { %> 
              
                <ul class="list-group mb-0">
                  <% dailyArray.forEach((dailyTask) =>{  %>
                    <form action="/delete" method="post">
                      <li class="list-group-item d-flex align-items-center border-0 mb-2 rounded"  style="background-color: #f4f6f7;">    
                        <input name="checkThis" class="form-check-input me-2" type="checkbox" onchange="this.form.submit()" value="<%= dailyTask.id %>" aria-label="..."/>   
                        <p><%= dailyTask.task %></p>
                      </li>
                    </form>  
                  <%   })    %>
                </ul>
              
              <% } %>
            </div>
          </div>
          <!-- Tabs content -->

        </div>
      </div>

    </div>
  </div>
</div>
</section>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</body>
</html>